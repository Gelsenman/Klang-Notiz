{
  "name": "klang-notiz",
  "version": "1.0.0",
  "description": "Hotkey Voice Brief - Sprachnotizen zu strukturierten Texten",
  "main": "dist/main/index.js",
  "author": "Feldhege",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:main && electron .",
    "build": "npm run build:next && npm run build:main",
    "build:next": "next build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.469.0",
    "next": "^14.2.21",
    "openai": "^4.77.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "net.feldhege.klang-notiz",
    "productName": "Klang-Notiz",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    }
  }
}
